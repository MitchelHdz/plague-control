.jumbotron
    background-image linear-gradient(0deg,rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('../img/img1.jpg')
    background-position center center
    background-repeat no-repeat
    background-size cover
    height 60vh
    margin-bottom 0px
    .container
        max-width 500px
        padding-top 150px
        h1
            color #ffffff
            font-weight bold
            font-size 28px
        .btn
            background transparent
            border solid 1px #ffffff
            border-radius 0px
            padding 5px 10px
section.mission
    background-color #827717
    padding 70px 30px
    hr
        background-color #ffffff
        height 2px
        width 70px
    .mission-text
        color #ffffff
        font-size 20px
        line-height 28px
        margin 0 auto
        max-width 700px
.services-container
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    @media screen and (max-width: 600px)
        flex-direction column
    .services-box
        padding 20px 0px
        padding-left 10%
        h1.service-title
            color #212121
            font-size 28px
            font-weight bold
        h3.service-title
            color #212121
            font-size 18px
            font-weight bold
    .side-image
        background-image url('../img/img2.jpg')
        background-position center center
        background-repeat no-repeat
        background-size cover
        height 530px
        width 50%
        @media screen and (max-width: 600px)
            width 100%
.courses-container
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    @media screen and (max-width: 980px)
        flex-direction column
    .courses-box
        padding 20px 0px
        padding 0px 10%
        width: 60%
        @media screen and (max-width: 980px)
            width 100%
        h1.course-title
            color #212121
            font-size 28px
            font-weight bold
        h3.course-title
            color #212121
            font-size 18px
            font-weight bold
    .carousel
        width 40%
        @media screen and (max-width: 980px)
            width 100%
.carousel
    .carousel-inner
        max-height 650px
section.warrantees
    background-color #827717
    padding 70px 30px
    hr
        background-color #ffffff
        height 2px
        width 70px
    .warrantee-title
        color #ffffff
        font-size 25px
        font-weight bold
        line-height 32px
        margin 0 auto
        max-width 700px
    .warrantee-text
        color #ffffff
        font-size 20px
        line-height 28px
        margin 0 auto
        max-width 700px
section.contact
    background-color #ffffff
    padding 70px 30px
    .contact-container
        align-items flex-start
        display flex
        flex-direction row
        justify-content space-around
        @media screen and (max-width: 600px)
            align-items center
            flex-direction column
        .hours
            h1
                color #212121
                font-size 28px
                font-weight bold
            h3
                color #212121
                font-size 18px
                font-weight bold
        .phones
            h1
                color #212121
                font-size 28px
                font-weight bold
            h3
                color #212121
                font-size 18px
                font-weight bold
